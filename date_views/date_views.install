<?php

/**
 * @file
 * Install, update and uninstall functions for the Date Views module.
 */

/**
 * Implements hook_install().
 */
function date_views_install() {
  config_set('date.settings','date_views_month_format_with_year', 'F Y');
  config_set('date.settings','date_views_month_format_without_year', 'F');
  config_set('date.settings','date_views_day_format_with_year', 'l, F j, Y');
  config_set('date.settings','date_views_day_format_without_year', 'l, F j');
  config_set('date.settings','date_views_week_format_with_year', 'F j, Y');
  config_set('date.settings','date_views_week_format_without_year', 'F j');
}

/**
 * Implements hook_uninstall().
 */
function date_views_uninstall() {
  config_del('date_views_month_format_with_year');
  config_del('date_views_month_format_without_year');
  config_del('date_views_day_format_with_year');
  config_del('date_views_day_format_without_year');
  config_del('date_views_week_format_with_year');
  config_del('date_views_week_format_without_year');
}

/**
 * Set default date views variables.
 */
function date_views_update_7200() {
  if (!config_get('date.settings','date_views_month_format_with_year', FALSE)) {
    config_set('date.settings','date_views_month_format_with_year', 'F Y');
  }
  if (!config_get('date.settings','date_views_month_format_without_year', FALSE)) {
    config_set('date.settings','date_views_month_format_without_year', 'F');
  }
  if (!config_get('date.settings','date_views_day_format_with_year', FALSE)) {
    config_set('date.settings','date_views_day_format_with_year', 'l, F j, Y');
  }
  if (!config_get('date.settings','date_views_day_format_without_year', FALSE)) {
    config_set('date.settings','date_views_day_format_without_year', 'l, F j');
  }
  if (!config_get('date.settings','date_views_week_format_with_year', FALSE)) {
    config_set('date.settings','date_views_week_format_with_year', 'F j, Y');
  }
  if (!config_get('date.settings','date_views_week_format_without_year', FALSE)) {
    config_set('date.settings','date_views_week_format_without_year', 'F j');
  }
}
